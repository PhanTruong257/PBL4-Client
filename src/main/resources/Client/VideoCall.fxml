<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.VideoCall">
    <children>
        <!-- Label và TextField của Your ID -->
        <Label fx:id="labelYourID" layoutX="50.0" layoutY="20.0" text="Your ID:" />
        <TextField fx:id="tfYourID" editable="false" layoutX="120.0" layoutY="16.0" prefHeight="25.0" prefWidth="120.0" promptText="Your ID" />

        <!-- Label và TextField của Partner ID -->
        <Label fx:id="labelPartnerID" layoutX="270.0" layoutY="20.0" text="Partner ID:" />
        <TextField fx:id="tfPartnerID" editable="true" layoutX="360.0" layoutY="16.0" prefHeight="25.0" prefWidth="140.0" />

        <!-- Nút Connect và Close -->
        <Button fx:id="btnConnect" layoutX="520.0" layoutY="16.0" mnemonicParsing="false" onMouseClicked="#handleClickConnect" prefHeight="25.0" prefWidth="70.0" text="Connect" />
        <Button fx:id="btnCloseConnect" layoutX="520.0" layoutY="50.0" mnemonicParsing="false" onMouseClicked="#handleClickCloseConnect" prefHeight="25.0" prefWidth="70.0" text="Close" />

        <ImageView fx:id="imgMe" fitHeight="218.0" fitWidth="240.0" layoutX="60.0" layoutY="82.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5;" />
        <ImageView fx:id="imgPa" fitHeight="218.0" fitWidth="240.0" layoutX="320.0" layoutY="82.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5;" />

    </children>
</AnchorPane>
